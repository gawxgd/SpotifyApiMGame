<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
			 xmlns:vm="using:spotifyAPIgae.ViewModels"
             x:Class="spotifyAPIgae.Views.ChatView"
			 x:DataType="vm:ChatViewModel">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height ="*"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		
		
		<StackPanel Grid.Row="1" Orientation="Horizontal">
			<Button Name="likeButton">Like</Button>
			<Button Name="dislikeButton">Dislike</Button>
			<Button Name="piwoButton">Piwo</Button>
			<Button Name="faceButton">Face</Button>
		</StackPanel>
		<Grid Grid.Row="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width ="*"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			<TextBox Grid.Column="0" Name="chatTextBox"/>
			<Button Grid.Column="1" Name="sendButton">Send</Button>
		</Grid>
	</Grid>
</UserControl>
