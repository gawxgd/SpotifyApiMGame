<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:vm="using:spotifyAPIgae.ViewModels"
		mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="spotifyAPIgae.Views.GameWindow"
        Title="GameWindow"
		 x:CompileBindings="True"
		x:DataType="vm:GameViewModel">
	<Design.DataContext>
		<vm:GameViewModel/>
	</Design.DataContext>

	<Grid RowDefinitions="*,Auto" Margin="10">
		<TransitioningContentControl Content="{Binding CurrentViewModel}" />

		<StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="5"
					HorizontalAlignment="Right">
			<Button Command="{Binding NavigatePreviousCommand}" Content="Back" />
			<Button x:Name="NextButton" Command="{Binding NavigateNextCommand}" Content="Next" IsVisible="False" />
		</StackPanel>
	</Grid>
</Window>
